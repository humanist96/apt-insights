# FastAPI Backend Configuration

# Data source configuration
# Set to 'true' to use PostgreSQL, 'false' to use JSON files
USE_DATABASE=false

# Server configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Logging level
LOG_LEVEL=info

# Performance Optimization
WARM_CACHE_ON_STARTUP=false  # Set to true to pre-populate cache on startup

# Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/apartment_db

# Payment Integration (PortOne)
PORTONE_API_KEY=test_key
PORTONE_API_SECRET=test_secret
PORTONE_WEBHOOK_SECRET=test_webhook_secret
PAYMENT_MODE=mock  # mock or production

# Note: This backend automatically inherits USE_DATABASE from parent .env
# The parent project's .env is loaded by backend.data_loader module
