# =============================================================================
# Next.js Frontend - Production Environment Variables
# =============================================================================
# Copy this file to .env.production.local for production deployment
# cp .env.production.example .env.production.local

# =============================================================================
# API Configuration (REQUIRED)
# =============================================================================
# FastAPI Backend URL (Railway/AWS/Azure deployment URL)
NEXT_PUBLIC_API_URL=https://your-backend-url.railway.app

# =============================================================================
# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_NAME="Korean Apartment Transaction Analysis Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Real-time apartment transaction data analysis and insights"

# =============================================================================
# Build Configuration
# =============================================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false

# =============================================================================
# API Rate Limiting (Optional)
# =============================================================================
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_COUNT=3

# =============================================================================
# Vercel Configuration (Auto-populated by Vercel)
# =============================================================================
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app
# VERCEL_REGION=icn1
